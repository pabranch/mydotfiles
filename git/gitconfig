[user]
	name = Perry A Branch
[alias]
	fixup = !sh -c 'git commit --fixup=$1' -
	squash = !sh -c 'git commit --squash=$1' -

	bi = bisect
	br = branch
	co = checkout

	cp = cherry-pick
	cpa = cherry-pick --abort
	cpc = cherry-pick --continue
	cps = cherry-pick --skip

	ci = commit
	amend = commit --amend

	cfg = config
	gcfg = config --global

	df = diff -M -w
	dt = difftool

	lga = log --graph --oneline --decorate --all
	lg = log --graph --oneline --decorate -15
#	log = log --simplify-merges

	m = merge
	mt = mergetool

	rb = rebase
	rba = rebase --abort
	rbc = rebase --continue
	rbi = rebase --interactive --autosquash
	rbs = rebase --skip

	update = remote update

	setto = reset --hard
	unstage = reset HEAD
	undo = reset ORIG_HEAD

	sw = show -M -w
	last = show -s

	pop = stash pop
	st = status -sb
[color]
	ui = auto
[column]
	ui = auto
[diff]
	guitool = kdiff3
[interactive]
	singlekey = true
[merge]
	tool = kdiff3
	defaulttoupstream = true
	log = true
[mergetool]
	keepbackup = false
[rebase]
	autosquash = true
[rerere]
	enabled = true
