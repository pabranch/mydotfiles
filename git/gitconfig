[user]
	name = Perry A Branch
	email = git@notrashmail.com
[url "git@github.com:"]
	insteadOf = gh:
[url "git@bitbucket.org:"]
	insteadOf = bb:
[alias]
	fixup = !sh -c 'git commit --fixup=$1' -
	squash = !sh -c 'git commit --squash=$1' -
	squashall = !sh -c 'git reset --hard @{u} && git merge --squash @{1} && git commit ' -

	bi = bisect
	br = branch
	co = checkout

	cp = cherry-pick
	cpa = cherry-pick --abort
	cpc = cherry-pick --continue
	cpq = cherry-pick --quit
	cps = cherry-pick --skip

	ci = commit
	amend = commit --amend

	cfg = config
	gcfg = config --global

	df = diff -M -w
	dfc = diff --find-renames --ignore-all-space --cached
	changed = diff --find-renames --ignore-all-space --name-status
	dfsm = diff --find-renames --ignore-all-space --submodule --ignore-submodules=none
	dt = difftool

	lg = log --graph --oneline --decorate -15
	lga = log --graph --oneline --decorate --all
	lgu = log --oneline --decorate @{u}^..
#	log = log --simplify-merges

	m = merge
	mt = mergetool

	rb = rebase
	rba = rebase --abort
	rbc = rebase --continue
	rbi = rebase --interactive --autosquash
	rbs = rebase --skip

	update = remote update

	setto = reset --hard
	unstage = reset HEAD
	undo = reset ORIG_HEAD

	sw = show -M -w
	last = show -s

	pop = stash pop
	st = status -sb
[color]
	ui = auto
[column]
	ui = auto
[diff]
	guitool = kdiff3
[difftool "kdiff3"]
	path = /c/opt/KDiff3/kdiff3
[interactive]
	singlekey = true
[merge]
	tool = kdiff3
	defaulttoupstream = true
	log = true
[mergetool]
	keepbackup = false
[rebase]
	autosquash = true
[rerere]
	enabled = true
